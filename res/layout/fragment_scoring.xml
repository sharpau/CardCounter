<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:id="@+id/fragment_scoring" >
	    
	    <TextView
	        android:textSize="20sp"
	        android:text="Melds"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	
		<GridLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:columnCount="2"
		    android:id="@+id/fragment_scoring_melds" />
		
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:columnCount="2"
		    >
		    
		    <TextView
		        android:textSize="20sp"
		        android:text="Tricks"
		        android:layout_centerInParent="true"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        />
		    
			<Button 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
			    android:id="@+id/switch_scoring_button"
			    android:text="@string/switch_button"
			    android:onClick="SwitchTricks"
			    />
			    
		    
		</RelativeLayout>
		    
		
		    
		<GridLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:columnCount="2"
		    android:id="@+id/fragment_scoring_tricks_simple" />
		    
		<GridLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:columnCount="2"
		    android:id="@+id/fragment_scoring_tricks" />
		
		    
	</LinearLayout>
</ScrollView>