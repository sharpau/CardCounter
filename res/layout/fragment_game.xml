<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_game" >
    
    <!-- names and scrollviews -->
    <GridLayout
 	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"

        android:columnCount="3"
        android:rowCount="6" >
        
        <!-- column 0 = labels -->
	 	<TextView
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	   	    android:layout_row="0"
	   	    android:layout_column="0"
	 	    android:hint="Team Name" />
	 	
        <TextView
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	   	    android:layout_row="3"
	   	    android:layout_column="0"
	 	    android:hint="Total Score" />
	 	
	 	<TextView
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	   	    android:layout_row="4"
	   	    android:layout_column="0"
	 	    android:hint="Meld Points" />
	 	
	 	<TextView
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	   	    android:layout_row="5"
	   	    android:layout_column="0"
	 	    android:hint="Trick Points" />
        
        <!-- column 1 = team 1 -->
	    <EditText
	        android:id="@+id/team1name"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_row="0"
	   	    android:layout_column="1"
	   	    android:layout_gravity="right"
	   	    android:hint="Team 1" />
	    
	    <!-- scores entered, to be summed -->
	 	<ScrollView 
	 	    android:id="@+id/team1_scroll"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	   	    android:layout_row="1"
	   	    android:layout_column="1"
		    android:orientation="vertical" />
	 	
	 	<!-- sum line -->
	 	<View
            android:layout_width="80dp"
			android:layout_height="1dp"
	   	    android:layout_row="2"
	   	    android:layout_column="1"
	   	    android:layout_gravity="right"
			android:background="@android:color/black" />
	 	
	 	<!-- sums total scores -->
	 	<TextView
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	   	    android:layout_row="3"
	   	    android:layout_column="1"
	   	    android:layout_gravity="right"
	 	    android:id="@+id/team1_score"
	 	    android:textSize="18sp"
	 	    android:hint="0" />
	 	
	 	<!-- entry for meld points -->
	    <EditText
	        android:id="@+id/team1_meld"
	        android:inputType="number"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_row="4"
	   	    android:layout_column="1"
	   	    android:layout_gravity="right"
	   	    android:hint="0" />
	    
	 	<!-- entry for trick points -->
	    <EditText
	        android:id="@+id/team1_tricks"
	        android:inputType="number"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_row="5"
	   	    android:layout_column="1"
	   	    android:layout_gravity="right"
	   	    android:hint="0" />
	    
        <!-- column 2 = team 2 -->
	    <EditText
	        android:id="@+id/team2name"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_row="0"
	   	    android:layout_column="2"
	   	    android:layout_gravity="right"
	   	    android:hint="Team 2" />
	    
        <!-- scores entered, to be summed -->
	 	<ScrollView 
	 	    android:id="@+id/team2_scroll"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	   	    android:layout_row="1"
	   	    android:layout_column="2"
		    android:orientation="vertical" />
	 	
	 	<!-- sum line -->
	 	<View
            android:layout_width="80dp"
			android:layout_height="1dp"
	   	    android:layout_row="2"
	   	    android:layout_column="2"
	   	    android:layout_gravity="right"
			android:background="@android:color/black" />
	 	
	 	<!-- sums total scores -->
	 	<TextView
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	   	    android:layout_row="3"
	   	    android:layout_column="2"
	   	    android:layout_gravity="right"
	 	    android:id="@+id/team2_score"
	 	    android:textSize="18sp"
	 	    android:hint="0" />
	 	
	 	<!-- entry for meld points -->
	    <EditText
	        android:id="@+id/team2_meld"
	        android:inputType="number"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_row="4"
	   	    android:layout_column="2"
	   	    android:layout_gravity="right"
	   	    android:hint="0" />
	    
	 	<!-- entry for trick points -->
	    <EditText
	        android:id="@+id/team2_tricks"
	        android:inputType="number"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_row="5"
	   	    android:layout_column="2"
	   	    android:layout_gravity="right"
	   	    android:hint="0" />
	    
    </GridLayout>
	    
    <!-- button to add scores up -->
    <Button
        android:id="@+id/sum_scores"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:text="Add Scores"
   	    android:layout_gravity="center_horizontal"
         />
    
    
    <GridLayout
 	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"

        android:columnCount="2"
        android:rowCount="2" >
 	
	 	<TextView
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	   	    android:layout_row="0"
	   	    android:layout_column="0"
	 	    android:hint="Current Bid" />
	 	<TextView
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	   	    android:layout_row="1"
	   	    android:layout_column="0"
	 	    android:hint="Trump Suit" />
	 	
	 	<!-- current bid & trump suit -->
	    <EditText
	        android:id="@+id/bid"
	        android:inputType="number"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_row="0"
	   	    android:layout_column="1"
	   	    android:hint="250" />
	    <EditText
	        android:id="@+id/trump"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_row="1"
	   	    android:layout_column="1"
	   	    android:hint="Hearts" />
 	</GridLayout>
 	

</LinearLayout>
